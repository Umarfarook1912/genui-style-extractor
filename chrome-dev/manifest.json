{
    "manifest_version": 3,
    "name": "GenUI - Style Extractor",
    "version": "1.0.0",
    "description": "Extract UI styles and convert to CSS/Tailwind code",
    "icons": {
        "16": "icons/icon-extension-16.png",
        "48": "icons/icon-extension-48.png",
        "128": "icons/icon-extension-128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "GenUI Style Extractor",
        "default_icon": {
            "16": "icons/icon-extension-16.png",
            "48": "icons/icon-extension-48.png",
            "128": "icons/icon-extension-128.png"
        }
    },
    "permissions": [
        "scripting",
        "activeTab",
        "tabs",
        "windows",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>",
        "http://localhost/*",
        "https://*.catalystserverless.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script.js"
            ],
            "run_at": "document_idle"
        }
    ]
}